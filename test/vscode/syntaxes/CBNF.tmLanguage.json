{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "CBNF",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#line-comment"
        },
        {
            "include": "#block-comment"
        },
        {
            "include": "#identifier"
        },
        {
            "include": "#integer"
        },
        {
            "include": "#string"
        }
    ],
    "repository": {
        "identifier": {
            "patterns": [{
                "name": "lexeme.identifier.cbnf",
                "match": "\\b([_a-zA-Z][_\\-a-zA-Z0-9]*)\\b"
            }]
        },
        "integer": {
            "patterns": [{
                "name": "lexeme.integer.cbnf",
                "match": "\\b([0-9]*)\\b"
            }]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.cbnf",
                "match": "\\b(keywords|identifiers|operators|separators|terminators|strings|language|comment|quote|lexeme|pass|requires|output|switch|write|name|for|each|in|productions|names|is\\-optional|is\\-non\\-empty|is\\-list|true|false|input\\-name|quotes|lexemes|block\\-comments|line\\-comments|passes|parse|walk|as|lower\\-case|quote\\-stripped|regex\\-escaped|double\\-regex\\-escaped|ssi\\-counter)\\b"
            }]
        },
        "string": {
            "name": "string.quotes.string.cbnf",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.string.cbnf",
                    "match": "\\\\."
                }
            ]
        },
        "line-comment": {
            "name": "comment.line.cbnf",
            "begin": "//",
            "end": "\n",
            "patterns": []
        },
        "block-comment": {
            "name": "comment.block.cbnf",
            "begin": "/\\*",
            "end": "\\*/",
            "patterns": []
        }
},
    "scopeName": "source.cbnf"
}
