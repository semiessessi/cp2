        string-values = string-values + "        \"" + string-definition .name + "\": {\n" + "            \"name\": \"string.quotes." + string-definition .name + "." + lower-case-name + "\",\n" + "            \"begin\": \"" ;
        string-values = string-values + first-quote ;
